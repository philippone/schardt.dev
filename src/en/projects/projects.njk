<h2>Projects</h2>

{% for post in collections.project | reverse | localization(locale) %}
    {% if loop.first %}
        <ul>
        {% endif %}
        <li>
            <article>
                <h3>
                    <a href="{{ post.url }}"><span>{{ post.data.title }}</span></a>
                    {% if post.data.teaser %}<p>{{post.data.teaser}}</p>{% endif %}
                    <p>
                    <time datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date | date("DD MMMM[,] Y", locale) }}</time>
                    </p>
                </h3>
            </article>

        </li>

        {% if loop.last %}
        </ul>
    {% endif %}
{% endfor %}