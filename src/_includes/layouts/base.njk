<!doctype html>
<html lang="{{ locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="keywords" content="{{metadata.keywords}}" />
    <link rel="stylesheet" href="{{ '/styles/styles.css' | url }}">
  </head>
  <body>

    <button type="button" id="theme-toggle" onclick="toggleTheme()">toggle dark mode</button>

    {{ content | safe }}

    <!-- Current page: {{ page.url | url }} -->
  </body>
  <script>

    const page = document.querySelector('html');
    const isDarkTheme = sessionStorage.getItem('theme');
    if (isDarkTheme) {
      page
        .classList
        .add('dark');
    }

    /** toggle dark/light theme */
    const toggleTheme = () => {

      const isDarkTheme = sessionStorage.getItem('theme') || page
        .classList
        .contains('dark') || false;

      if (isDarkTheme) {
        page
          .classList
          .remove('dark');
        sessionStorage.removeItem('theme');
      } else {
        page
          .classList
          .add('dark');
        sessionStorage.setItem('theme', 'dark');
      }
    }
  </script>
</html>